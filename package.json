{
    "name": "vscode-react-tailwind-webview-starter",
    "displayName": "vscode-react-tailwind-webview-starter",
    "description": "A starter template for a Visual Studio Code extension with a webview using React 19 + Tailwind 4",
    "version": "0.0.1",
    "repository": {
        "url": "https://github.com/LiTianchu/vscode-react-tailwind-webview-template",
        "type": "git"
    },
    "engines": {
        "vscode": "^1.71.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "myCustomSidebar",
                    "title": "My Custom Sidebar",
                    "icon": "media/icon.svg"
                }
            ]
        },
        "views": {
            "myCustomSidebar": [
                {
                    "type": "webview",
                    "id": "myExtension.customView",
                    "name": "My View",
                    "icon": "media/icon.svg"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "npm-run-all --parallel compile:*",
        "compile:ext": "webpack --mode development --config ./webpack/extension.config.js",
        "compile:wv": "webpack --mode development --config ./webpack/webview.config.js",
        "watch": "npm-run-all --parallel watch:*",
        "watch:ext": "webpack --mode development --watch --config ./webpack/extension.config.js",
        "watch:wv": "webpack serve --mode development --config ./webpack/webview.config.js",
        "package": "npm run clean && npm-run-all --parallel package:*",
        "package:ext": "webpack --mode production --config ./webpack/extension.config.js",
        "package:wv": "webpack --mode production --config ./webpack/webview.config.js",
        "lint": "eslint src --ext ts",
        "clean": "rimraf dist"
    },
    "devDependencies": {
        "@eslint/js": "^9.38.0",
        "@estruyf/vscode": "1.2.0",
        "@tailwindcss/postcss": "^4.1.16",
        "@types/glob": "8.1.0",
        "@types/mocha": "10.0.10",
        "@types/node": "24.9.1",
        "@types/react": "19.2.2",
        "@types/react-dom": "19.2.2",
        "@types/uuid": "10.0.0",
        "@types/vscode": "^1.105.0",
        "@types/webpack": "^5.28.1",
        "@types/webpack-dev-server": "4.7.1",
        "@typescript-eslint/eslint-plugin": "8.46.2",
        "@typescript-eslint/parser": "8.46.2",
        "@vscode/test-electron": "2.5.2",
        "css-loader": "7.1.2",
        "eslint": "^9.38.0",
        "eslint-plugin-react": "^7.37.5",
        "glob": "11.0.3",
        "globals": "^16.4.0",
        "inquirer": "^12.10.0",
        "jiti": "^2.6.1",
        "mocha": "11.7.4",
        "npm-run-all": "4.1.5",
        "postcss": "^8.5.6",
        "postcss-loader": "8.2.0",
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "rimraf": "6.0.1",
        "style-loader": "4.0.0",
        "tailwindcss": "^4.1.16",
        "ts-loader": "9.5.4",
        "typescript": "5.9.3",
        "typescript-eslint": "^8.46.2",
        "webpack": "5.102.1",
        "webpack-cli": "6.0.1",
        "webpack-dev-server": "5.2.2",
        "webpack-manifest-plugin": "5.0.1"
    }
}
